using System;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            int count = 0;
            // while 반복문
            while (count < 5) // () 값이 참이라면 무한 반복.
            {
                Console.WriteLine("Hello World");
                count++;
            }
            string answer;
            // 거울아 거울아~
            do //while 조건과 상관없이 무조건 들어온다. 자주 쓰지는 않음.
            {
                Console.WriteLine("강사님은 잘 생기셨나요?(y/n) :");
                answer = Console.ReadLine();
            } while (answer != "y");

            Console.WriteLine("정답입니다.");

            for (int i = 0; i < 5; i++) //초기화식; 조건식; 반복식 
                // 순서 1 초기화식 2 조건식 3 코드 실행 4 반복식
            {
                Console.WriteLine("Hello World");
            }

        }
    }
}
